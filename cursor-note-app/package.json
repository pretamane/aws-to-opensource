{
  "name": "cursor-note-app",
  "displayName": "Cursor Note App",
  "description": "A beautiful note-taking widget for Cursor IDE with separate or attached panel support",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cursorNoteApp.open",
    "onCommand:cursorNoteApp.openAttached"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorNoteApp.open",
        "title": "Open Note App (Separate Panel)",
        "category": "Note App"
      },
      {
        "command": "cursorNoteApp.openAttached",
        "title": "Open Note App (Attached Panel)",
        "category": "Note App"
      },
      {
        "command": "cursorNoteApp.save",
        "title": "Save Notes",
        "category": "Note App"
      },
      {
        "command": "cursorNoteApp.clear",
        "title": "Clear All Notes",
        "category": "Note App"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "cursorNoteAppView",
          "name": "Notes",
          "when": "false"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cursorNoteApp.open",
          "when": "view == cursorNoteAppView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "cursorNoteApp.open",
          "when": "true"
        },
        {
          "command": "cursorNoteApp.openAttached",
          "when": "true"
        },
        {
          "command": "cursorNoteApp.save",
          "when": "true"
        },
        {
          "command": "cursorNoteApp.clear",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}

