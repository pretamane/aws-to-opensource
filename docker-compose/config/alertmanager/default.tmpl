{{ define "__alert_severity_prefix" -}}
    {{ if eq .Labels.severity "critical" -}}
        [CRITICAL]
    {{- else if eq .Labels.severity "warning" -}}
        [WARNING]
    {{- else if eq .Labels.severity "info" -}}
        [INFO]
    {{- else -}}
        [ALERT]
    {{- end }}
{{- end }}

{{ define "__alert_severity_prefix_title" -}}
    {{ if eq .Labels.severity "critical" -}}
        P1
    {{- else if eq .Labels.severity "warning" -}}
        P2
    {{- else if eq .Labels.severity "info" -}}
        P3
    {{- else -}}
        P4
    {{- end }}
{{- end }}

{{ define "slack.default.title" -}}
    [{{ template "__alert_severity_prefix_title" . }}] {{ .Labels.alertname }}
{{- end }}

{{ define "slack.default.text" -}}
{{ template "__alert_severity_prefix" . }}: {{ .Annotations.summary }}

*Description:* {{ .Annotations.description }}
*Environment:* {{ .CommonLabels.environment }}
*Service:* {{ .CommonLabels.service | default "N/A" }}
*Instance:* {{ .CommonLabels.instance | default "N/A" }}
*Status:* {{ .Status | toUpper }}
*Started:* {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}
{{ if .EndsAt }}*Resolved:* {{ .EndsAt.Format "2006-01-02 15:04:05 MST" }}{{ end }}
{{- end }}

{{ define "email.default.subject" -}}
    {{ template "__alert_severity_prefix" . }}: {{ .GroupLabels.alertname }} ({{ .Alerts | len }} alerts)
{{- end }}

{{ define "email.default.html" -}}
<!DOCTYPE html>
<html>
<head>
    <style>
        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
        .container { max-width: 800px; margin: 0 auto; padding: 20px; }
        .header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 5px; }
        .alert { border-left: 4px solid #f44336; padding: 15px; margin: 15px 0; background: #fff3f3; border-radius: 3px; }
        .alert.warning { border-left-color: #ff9800; background: #fff8e1; }
        .alert.resolved { border-left-color: #4caf50; background: #f1f8e9; }
        .details { background: #f5f5f5; padding: 10px; border-radius: 3px; margin: 10px 0; }
        .label { font-weight: bold; color: #666; }
        .footer { margin-top: 30px; padding-top: 20px; border-top: 1px solid #ddd; font-size: 12px; color: #999; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2>{{ template "__alert_severity_prefix" . }} Alert Notification</h2>
            <p>{{ .Alerts | len }} alert(s) for {{ .GroupLabels.alertname }}</p>
        </div>

        {{ range .Alerts }}
        <div class="alert{{ if eq .Status "resolved" }} resolved{{ else if eq .Labels.severity "warning" }} warning{{ end }}">
            <h3>{{ .Annotations.summary }}</h3>
            <p>{{ .Annotations.description }}</p>

            <div class="details">
                <p><span class="label">Severity:</span> {{ .Labels.severity }}</p>
                <p><span class="label">Service:</span> {{ .Labels.service | default "N/A" }}</p>
                <p><span class="label">Instance:</span> {{ .Labels.instance | default "N/A" }}</p>
                <p><span class="label">Category:</span> {{ .Labels.category | default "general" }}</p>
                <p><span class="label">Started:</span> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}</p>
                {{ if .EndsAt }}<p><span class="label">Resolved:</span> {{ .EndsAt.Format "2006-01-02 15:04:05 MST" }}</p>{{ end }}
            </div>
        </div>
        {{ end }}

        <div class="footer">
            <p>This is an automated alert from Prometheus Alertmanager.</p>
            <p>Environment: {{ .CommonLabels.environment }} | Project: {{ .CommonLabels.project }}</p>
        </div>
    </div>
</body>
</html>
{{- end }}
